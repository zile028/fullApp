<%- include("partials/adminSideBar") %>

<!-- ============================================================== -->
<!-- Page wrapper  -->
<!-- ============================================================== -->
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Kreiraj korisnika</h4>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <form class="form-horizontal" action="/admin/create/save" method="post">
                        <div class="card-body">
                            <h4 class="card-title">Licni podaci</h4>
                            <div class="form-group row">
                                <label for="fname" class="col-sm-3 text-right control-label col-form-label">Ime</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="fname" name="firstName"
                                           placeholder="Ime">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="lname" class="col-sm-3 text-right control-label
                                col-form-label">Prezime</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" id="lname" placeholder="Prezime"
                                           name="lastName">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="email" class="col-sm-3 text-right control-label
                                col-form-label">E-mail</label>
                                <div class="col-sm-9">
                                    <input type="email" class="form-control" id="email" placeholder="Email"
                                           name="email">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="pass" class="col-sm-3 text-right control-label
                                col-form-label">Password</label>
                                <div class="col-sm-9">
                                    <input type="password" class="form-control" id="pass" placeholder="Password"
                                           name="password">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="role" class="col-sm-3 text-right control-label
                                col-form-label">Uloga</label>
                                <div class="col-sm-9">
                                    <select class="form-control" id="role" name="role">
                                        <option value="operater">Operater</option>
                                        <option value="savetnik">Savetnik</option>
                                        <option value="admin">Admin</option>

                                    </select>
                                </div>
                            </div>

                        </div>
                        <div class="border-top">
                            <div class="card-body">
                                <button class="btn btn-primary">Kreiraj</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->
    <footer class="footer text-center">
        All Rights Reserved by Matrix-admin. Designed and Developed by <a href="https://wrappixel.com">WrapPixel</a>.
    </footer>
    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Page wrapper  -->
<!-- ============================================================== -->
</div>
