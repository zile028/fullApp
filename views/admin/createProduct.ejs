                                    <input type="text" class="form-control" id="lname" placeholder="Cena proizvoda"
                                           name="price">
                                </div>
                            </div>

                        </div>
                        <div class="border-top">
                            <div class="card-body">
                                <button class="btn btn-primary">Kreiraj</button>
