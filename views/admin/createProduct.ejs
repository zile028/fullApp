    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <form class="form-horizontal" action="/admin/create/product/save" method="post">
                        <div class="card-body">
                            <h4 class="card-title">Novi proizvod</h4>

